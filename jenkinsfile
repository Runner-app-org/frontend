pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the project....'
                sh 'echo "This is a test build" > build.txt'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'cat build.txt'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying to staging...'
                sh 'echo "Deployed successfully"'
            }
        }
    }
}
